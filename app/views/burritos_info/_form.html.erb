  <div class="field">
    <%= form.label :saturday %>
     <%=
    form.time_field :saturdayO,
      value: "%H:%M",
      min: 'hh:mm:ss',
      max: 'hh:mm:ss',
      id: 'saturdayO',
      class: 'never-submit'
  %>
    <%=
    form.time_field :saturdayC,
