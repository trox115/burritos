  </div>

  <div class="api__field">
    <%= form.label :monday, class:'api__label' %>
     <%=
    form.time_field :mondayO,
      value: "%H:%M",
      min: 'hh:mm:ss',
      max: 'hh:mm:ss',
      id: 'mondayO',
      class: 'never-submit api__input'
  %>
    <%=
    form.time_field :mondayC,
      value: "%H:%M",
      min: 'hh:mm:ss',
      max: 'hh:mm:ss',
      id: 'mondayC',
      class: 'never-submit api__input'
  %>
  </div>

