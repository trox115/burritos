<%= form_for(@burritos) do |form| %>



  <div class="api__field">
    <%= form.label :name, class:'api__label'%>
    <%= form.text_field :name, class:'api__input' %>
  </div>

  <div class="api__field">
    <%= form.label :address, class:'api__label' %>
    <%= form.text_field :address,class:'api__input' %>
  </div>

  <div class="api__field">
    <%= form.label :adress2, class:'api__label' %>
    <%= form.text_field :address_line_2,class:'api__input'%>
  </div>

  <div class="api__field">
    <%= form.label :lat, class:'api__label' %>
    <%= form.text_field :lat,class:'api__input' %>
  </div>

  <div class="api__field">
    <%= form.label :lng, class:'api__label' %>
    <%= form.text_field :lng,class:'api__input' %>
  </div>

  <div class="api__field">
    <%= form.label :category_id, class:'api__label' %>
    <%= form.number_field :category_id,class:'api__input' %>
  </div>

  <div class="api__field">
    <%= form.label :category_id2, class:'api__label' %>
    <%= form.number_field :category_id2,class:'api__input' %>
  </div>

  <div class="api__field">
    <%= form.label :closed, class:'api__label' %>
