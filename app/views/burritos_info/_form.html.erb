  <div class="api__field">
    <%= form.label :hours, class:'api__label' %>
    <%= form.text_field :hours, id: 'hours',class:'api__input' %>
  </div>

  <div class="api__field">
    <%= form.label :phone, class:'api__label' %>
    <%= form.text_field :phone_number,class:'api__input' %>
  </div>

  <div class="actions">
    <%= form.submit class:'api__submit'%>
  </div>
<% end %>
<script>
$(document).ready(function(){
  
  $("#mondayO, #mondayC, #tuesdayO,#tuesdayC,#wednesdayO,#wednesdayC,#thursdayO,#thursdayC,#fridayO,#fridayC,#saturdayO,#saturdayC,#sundayO,#sundayC").on('change', function () {
    var mondayO = $('#mondayO');
    var mondayC = $('#mondayC');
    var tuesdayO = $('#tuesdayO');
    var tuesdayC = $('#tuesdayC');
    var wednesdayO = $('#wednesdayO');
    var wednesdayC = $('#wednesdayC');
var thursdayO = $('#thursdayO');
    var thursdayC = $('#thursdayC');
    var fridayO = $('#fridayO');
    var fridayC = $('#fridayC');
    var saturdayO = $('#saturdayO');
    var saturdayC = $('#saturdayC');
    var sundayO = $('#sundayO');
    var sundayC = $('#sundayC');
    var duration =`${mondayO[0].value} ${mondayC[0].value},${tuesdayO[0].value} ${tuesdayC[0].value},${wednesdayO[0].value} ${wednesdayC[0].value},${thursdayO[0].value} ${thursdayC[0].value},${fridayO[0].value} ${fridayC[0].value},${saturdayO[0].value} ${saturdayC[0].value},${sundayO[0].value} ${sundayC[0].value}`

    $("#hours").val(duration).attr("disable","false");
  });
});

$(document).ready(function() {
  $('form').submit(function() {
    $('.never-submit').prop('disabled', true);
    return true;
  });
});

</script>
