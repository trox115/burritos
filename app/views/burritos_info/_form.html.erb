<%= form_with(model: burritos_info, local: true) do |form| %>


  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :adress2 %>
    <%= form.text_field :adress2 %>
  </div>

  <div class="field">
    <%= form.label :lat %>
    <%= form.text_field :lat %>
  </div>

  <div class="field">
    <%= form.label :long %>
    <%= form.text_field :long %>
  </div>

  <div class="field">
    <%= form.label :category_id1 %>
    <%= form.number_field :category_id1 %>
  </div>

  <div class="field">
    <%= form.label :category_id2 %>
    <%= form.number_field :category_id2 %>
  </div>

  <div class="field">
    <%= form.label :category_id3 %>
    <%= form.number_field :category_id3 %>
  </div>

  <div class="field">
    <%= form.label :closed %>
    <%= form.text_field :closed %>
  </div>

  <div class="field">
    <%= form.label :monday %>
     <%=
    form.time_field :mondayO,
      value: "%H:%M",
      min: 'hh:mm:ss',
      max: 'hh:mm:ss',
      id: 'mondayO',
      class: 'never-submit'
  %>
    <%=
    form.time_field :mondayC,
      value: "%H:%M",
      min: 'hh:mm:ss',
      max: 'hh:mm:ss',
      id: 'mondayC',
      class: 'never-submit'
  %>
  </div>

