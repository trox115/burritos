      min: 'hh:mm:ss',
      max: 'hh:mm:ss',
      id: 'thursdayC',
      class: 'never-submit'
  %>
  </div>

  <div class="field">
    <%= form.label :friday %>
     <%=
    form.time_field :fridayO,
      value: "%H:%M",
      min: 'hh:mm:ss',
